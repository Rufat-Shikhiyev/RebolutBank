<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".features.account.BirthDateFragment">

    <TextView
        android:id="@+id/anytxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of birth"
        android:layout_marginTop="50dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/anytxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Add your birthday"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anytxt1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/anytxt2"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Day"
            android:textColorHint="@color/black"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:focusableInTouchMode="false"
            android:background="@drawable/edit_textbg"
            android:textColor="@color/black"
            android:defaultFocusHighlightEnabled="true"
            android:focusedByDefault="true"
            android:imeOptions="actionNext"
            android:layout_weight="1"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/datemonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Month"
            android:textColorHint="@color/black"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:focusableInTouchMode="false"
            android:background="@drawable/edit_textbg"
            android:textColor="@color/black"
            android:defaultFocusHighlightEnabled="true"
            android:focusedByDefault="true"
            android:imeOptions="actionNext"
            android:layout_weight="1"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dateyear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:textColorHint="@color/black"
            android:padding="20dp"
            android:focusableInTouchMode="false"
            android:layout_margin="5dp"
            android:background="@drawable/edit_textbg"
            android:textColor="@color/black"
            android:defaultFocusHighlightEnabled="true"
            android:focusedByDefault="true"
            android:imeOptions="actionNext"
            android:layout_weight="1"/>

    </LinearLayout>


    <Button
        android:id="@+id/nextmailsign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Continue"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>