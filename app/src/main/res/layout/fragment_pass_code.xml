<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="20dp"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".features.account.PassCodeFragment">


        <TextView
            android:id="@+id/anytxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Passcode"
            android:layout_marginTop="50dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/anytxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Passcode should be be 5 digits long"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/anytxt1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/anytxt2"
            android:orientation="horizontal"
            android:weightSum="6">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passcode1"
            android:layout_width="wrap_content"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_textbg"
            android:imeOptions="actionNext"
            android:inputType="number" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passcode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/edit_textbg"
                android:imeOptions="actionNext"
                android:inputType="number"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passcode3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/edit_textbg"
                android:imeOptions="actionNext"
                android:inputType="number" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passcode4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/edit_textbg"
                android:imeOptions="actionNext"
                android:inputType="number" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passcode5"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:background="@drawable/edit_textbg"
                android:imeOptions="actionNext"
                android:inputType="number" />

    </LinearLayout>



        <Button
            android:id="@+id/nextcarddesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="20dp"
            android:padding="12dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>



